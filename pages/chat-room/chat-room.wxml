<view style="position: relative; height: {{ navHeight }}px;"></view>
<!-- 导航栏 -->
<navbar page-name="{{ pageName }}">
	<image slot="backIcon" src="/public/image/back.png" mode="aspectFit" bind:tap="handleBack" style="width: 24px; height: 24px;"></image>
</navbar>
<scroll-view class="cu-chat" style="height: {{ windowHeight - navHeight - InputBottom - 50 }}px;"
	scroll-y="{{ true }}"
>
	<view wx:for="{{ group.content }}" wx:key="index" 
		class="{{ item.owner == owner? 'cu-item self': 'cu-item' }}"
	>
		<view wx:if="{{ item.owner != owner }}" class="cu-avatar radius" style="background-image:url({{item.avatarUrl}});"></view>
		<view class="main">
			<view class="content shadow {{ item.owner == owner? 'bg-green': '' }}">
				<text>{{item.content}}</text>
			</view>
		</view>
		<view wx:if="{{ item.owner == owner }}" class="cu-avatar radius" style="background-image:url({{item.avatarUrl}});"></view>
		<view class="date">{{item.date}}</view>
	</view>

