<view class="share-message-wrap">
	<!-- 主体内容 -->
	<view class="share-message-content-wrap">
		<!-- 头像 -->
		<image class="share-message-head-icon" src="{{ chat.headIcon }}" mode="aspectFit"></image>
		<!-- 名字 -->
		<view class="share-message-name">{{ chat.name }}</view>
		<!-- 说说内容 -->
		<view class="share-message-content">
			<view class="content">{{ chat.content }}</view>
		</view>
		<!-- 说说相关信息 -->
		<view class="share-message-info">
			<view style="display: flex;">
				<!-- 左下角的时间 -->
				<view class="share-message-time">{{ date }}</view>
				<!-- 点赞人数 -->
				<view class="likes-num">{{ chat.likes.length? chat.likes.length + '人觉得很赞': '' }} </view>
				<!-- 点赞 icon -->
				<image src="{{ likeIcon }}" class="share-message-chat-icon" mode="aspectFit"
					catch:tap="handleAddLike"
				></image>
				<!-- 功能 button -->
				<image class="share-message-option-icon" src="/public/image/chat-option.svg" mode="aspectFit"
					catch:tap="handleShowOptions"
				></image>
			</view>
			<!-- 地理位置 -->
			<view class="share-message-time">{{ chat.address }}</view>
		</view>
	</view>
	<!-- 功能面板 -->
	<view wx:if="{{ optionsShow }}" class="share-message-option-select">
		<view wx:for="{{ options }}" wx:key="index" data-index="{{ index }}" 
			class="share-message-option" bindtap="handleSelectOption"
		>
			<image class="option-icon" src="{{ item.icon }}" mode="aspectFit"></image>
			<view class="option-content">{{ item.content }}</view>
			<view wx:if="{{ index }}" class="option-divide"></view>
		</view>
	</view>
</view>

